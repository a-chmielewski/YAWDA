<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Color Resources -->
    <Color x:Key="WaterBlue">#0078D4</Color>
    <Color x:Key="WaterLightBlue">#DEECF9</Color>
    <Color x:Key="SuccessGreen">#107C10</Color>
    <Color x:Key="WarningOrange">#FF8C00</Color>
    <Color x:Key="ErrorRed">#D13438</Color>
    <Color x:Key="NeutralGray">#605E5C</Color>

    <!-- Brush Resources -->
    <SolidColorBrush x:Key="WaterBlueBrush" Color="{StaticResource WaterBlue}" />
    <SolidColorBrush x:Key="WaterLightBlueBrush" Color="{StaticResource WaterLightBlue}" />
    <SolidColorBrush x:Key="SuccessGreenBrush" Color="{StaticResource SuccessGreen}" />
    <SolidColorBrush x:Key="WarningOrangeBrush" Color="{StaticResource WarningOrange}" />
    <SolidColorBrush x:Key="ErrorRedBrush" Color="{StaticResource ErrorRed}" />
    <SolidColorBrush x:Key="NeutralGrayBrush" Color="{StaticResource NeutralGray}" />

    <!-- Typography Resources -->
    <x:Double x:Key="HeaderFontSize">28</x:Double>
    <x:Double x:Key="SubHeaderFontSize">20</x:Double>
    <x:Double x:Key="BodyFontSize">14</x:Double>
    <x:Double x:Key="CaptionFontSize">12</x:Double>

    <!-- Common Styles -->
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource HeaderFontSize}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource WaterBlueBrush}" />
    </Style>

    <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource SubHeaderFontSize}" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
    </Style>

    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource BodyFontSize}" />
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
    </Style>

    <Style x:Key="CaptionTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource CaptionFontSize}" />
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}" />
    </Style>

    <!-- Button Styles -->
    <Style x:Key="WaterIntakeButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource WaterBlueBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="FontSize" Value="{StaticResource BodyFontSize}" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="MinWidth" Value="120" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource WaterBlueBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource WaterBlueBrush}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="FontSize" Value="{StaticResource BodyFontSize}" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="MinWidth" Value="120" />
    </Style>

    <!-- Card Styles -->
    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="8" />
    </Style>

    <!-- Progress Bar Styles -->
    <Style x:Key="WaterProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Background" Value="{StaticResource WaterLightBlueBrush}" />
        <Setter Property="Foreground" Value="{StaticResource WaterBlueBrush}" />
        <Setter Property="Height" Value="12" />
        <Setter Property="CornerRadius" Value="6" />
    </Style>

    <!-- Icon Styles -->
    <Style x:Key="WaterDropIconStyle" TargetType="FontIcon">
        <Setter Property="FontFamily" Value="Segoe Fluent Icons" />
        <Setter Property="Glyph" Value="&#xE7F8;" />
        <Setter Property="Foreground" Value="{StaticResource WaterBlueBrush}" />
        <Setter Property="FontSize" Value="24" />
    </Style>

    <!-- Status Styles -->
    <Style x:Key="SuccessTextStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyTextStyle}">
        <Setter Property="Foreground" Value="{StaticResource SuccessGreenBrush}" />
    </Style>

    <Style x:Key="WarningTextStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyTextStyle}">
        <Setter Property="Foreground" Value="{StaticResource WarningOrangeBrush}" />
    </Style>

    <Style x:Key="ErrorTextStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyTextStyle}">
        <Setter Property="Foreground" Value="{StaticResource ErrorRedBrush}" />
    </Style>

</ResourceDictionary> 